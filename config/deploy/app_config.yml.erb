
all_environments: &all_environments
  app_name: <%= Capistrano::CLI.ui.ask("Enter friendly application name: ") %>
  app_email: <%= Capistrano::CLI.ui.ask("Enter developer e-mail: ") %>
  app_domain: <%= Capistrano::CLI.ui.ask("Enter application domain: ") %>
  
  ruby_path: <%= RbConfig::CONFIG['bindir'].sub(/.*\s.*/m, '"\&"') %>
  
  janrain_appname: <%= Capistrano::CLI.ui.ask("Enter Janrain application name: ") %>
  janrain_appid: <%= Capistrano::CLI.ui.ask("Enter Janrain application ID: ") %>
  janrain_secret: <%= Capistrano::CLI.ui.ask("Enter Janrain secret: ") %>
  
  mendeley_key: "<%= Capistrano::CLI.ui.ask("Enter Mendeley key: ") %>"
  airbrake_key: "<%= Capistrano::CLI.ui.ask("Enter Airbrake API key: ") %>"
  google_analytics_key: "<%= Capistrano::CLI.ui.ask("Enter Google Analytics account ID: ") %>"
  
  solr_server_url: <%= Capistrano::CLI.ui.ask("Enter Solr server path: ") %>
  solr_timeout: <%= Capistrano::CLI::ui.ask("Enter Solr timeout (in seconds, default 120): ")>
  
  available_csl_styles:
    - apa.csl
    - apsa.csl
    - asa.csl
    - chicago-author-date.csl
    - chicago-note-bibliography.csl
    - harvard1.csl
    - ieee.csl
    - mhra.csl
    - mla.csl
    - nature.csl
    - nlm.csl
    - vancouver.csl

development:
  <<: *all_environments  

test:
  <<: *all_environments  

production:
  <<: *all_environments  
